#!/bin/sh

service_arg="$1"
if [ -z "$service_arg" ]; then
    echo "You must give device id as a service argument" >&2
    exit 1
fi

if [ "$(id -u)" -eq 0 ]; then
    exec /usr/lib/qubes/usb-export "$service_arg"
else
    # preserve QREXEC_AGENT_PID variable
    exec sudo -E /usr/lib/qubes/usb-export "$service_arg"
fi
